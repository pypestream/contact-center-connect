{
  "name": "ccc",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "config/**/*"
  ],
  "scripts": {
    "ts:version": "tsc -v",
    "bootstrap": "lerna bootstrap",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "remove:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "lint-staged": "lint-staged --debug",
    "docs:build": "npx typedoc --out ./dist/sdk-docs src"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.3",
    "@nestjs/common": "^8.2.0",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "@types/uuid": "^8.3.1",
    "axios": "^0.24.0",
    "axios-debug-log": "^0.8.4",
    "axios-mock-adapter": "^1.20.0",
    "axios-retry": "^3.2.4",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "date-fns": "^2.27.0",
    "hbs": "^4.2.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-mocks-http": "^1.10.1",
    "raw-body": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "typedoc": "^0.22.5",
    "uuid": "^8.3.2",
    "ws": "^7.5.5"
  },
  "devDependencies": {
    "@ccc/eslint-config": "^0.0.0",
    "@ccc/test-tools": "^0.0.0",
    "@ccc/typescript-config": "^0.0.0",
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.2.0",
    "@types/express": "^4.17.13",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.jsx,.ts,.tsx --fix"
    ]
  }
}
